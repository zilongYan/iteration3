        <div id="video_container">
            <video id="warning" autoplay loop playsinline>
                <source id="warningvideo" src="http://savetheyouth-iteration3.tk/wp-content/uploads/2019/10/warning.mp4#t=2,2.1" type=video/mp4>
            </video>
            <video id="game1" autoplay loop playsinline>
                <source id="mp4video" src="http://savetheyouth-iteration3.tk/wp-content/uploads/2019/10/game1-first.mp4" type=video/mp4>
            </video>
            <div id="audio_container"><audio id="audio1" autoplay="autoplay"><source src="http://savetheyouth-iteration3.tk/wp-content/uploads/2019/09/After_School_Jamboree.mp3" type="audio/mpeg" /></audio></div>
            <button id='playGame'>
            </button>
