        </div>
                <button id='volume'>
                    <span><i id="off" class="fa fa-volume-up" aria-hidden="true" ></i></span>
                </button>
            
        </div>
        <script>
            var playGame = document.getElementById('playGame');
            var source = document.getElementById('mp4video');
            var video = document.getElementById('game1');
            var music =document.getElementById('audio1');
            var idPlaying = false;
            playGame.addEventListener('click',function(e){
                source.setAttribute('src',"http://savetheyouth-iteration3.tk/wp-content/uploads/2019/10/game1-loading.mp4");
                var video =document.getElementById('game1');
                video.load();
                video.play();
                playGame.style.display = 'none';
                video.loop = false;
                video.onended = function(){
                    source.setAttribute('src',"http://savetheyouth-iteration3.tk/wp-content/uploads/2019/10/game1-choose-character.mp4");
                    video.autoplay = true;
                    video.loop =true;
                    video.load();
                    video.play();
                    document.getElementById('girl').style.display='block';
                    document.getElementById('boy').style.display='block';
                }
            },false);
            document.getElementById('girl').addEventListener('click',function(e){
                    window.location.href = 'http://www.savetheyouth-iteration3.tk/game-01/';
            },false)
            document.getElementById('exit').addEventListener('click',function(e){
                    window.location.href = 'http://www.savetheyouth-iteration3.tk/games/';
            },false)
            document.getElementById('continue').addEventListener('click',function(e){
                    document.getElementById('warning').style.display = 'none';
                    document.getElementById('girl').style.display = 'none';
                    document.getElementById('exit').style.display = 'none';
                    video.style.display ='block';
            },false)
            document.getElementById('go_home').addEventListener('click',function(e){
                    window.location.href = 'http://www.savetheyouth-iteration3.tk/games/';
            },false)
            music.volume = 0.4;
            document.getElementById('volume').addEventListener('click',function(e){
                if(isPlaying){
                    music.pause();
                    document.getElementById('off').setAttribute('class',"fa fa-volume-off");
                }
                else{
                    music.play();
                    document.getElementById('off').setAttribute('class',"fa fa-volume-up");
                }
//                if(!playmusic){
//                    music.play();
//                    playmusic =true;
//                    document.getElementById('off').setAttribute('class',"fas fa-volume-mute");
//                }
                
                
            },false)
            music.onplaying =function(){
                isPlaying = true;
            }
            music.onpause =function(){
                isPlaying = false;
            }
        </script>
    </body>
