        <script>
            var music =document.getElementById('audio1');
            var isPlaying = false;
            var nextVideo;
            var currentVideo = 'morning1';
            
             document.getElementById('go_home').addEventListener('click',function(e){
                    window.location.href = 'http://www.savetheyouth-iteration3.tk/games/';
            },false)
            music.volume = 0.2;
            document.getElementById('volume').addEventListener('click',function(e){
                if(isPlaying){
                    music.pause();
                    document.getElementById('off').setAttribute('class',"fa fa-volume-off");
                }
                else{
                    music.play();
                    document.getElementById('off').setAttribute('class',"fa fa-volume-up");
                }
            },false)
            music.onplaying =function(){
                isPlaying = true;
            }
            music.onpause =function(){
                isPlaying = false;
            }
            
            var skip = document.getElementById('skip');
            skip.addEventListener('click',function(e){
                var video = document.getElementsByTagName('video');
                switch (currentVideo){
                    case 'morning1':
                        videoSelector('sit1')
                        skip.style.display='none';
                        document.getElementById('bus_selection_layer').style.display = 'block'; 
                        currentVideo ='sit1';
                        break;
                    case 'sit2':
                        videoSelector('sit3'); 
                        break;
                    case 'sit3':
                        videoSelector('morning2');
                        break;
                    case 'sit4':
                        videoSelector('sit1');
                        break;
                    case 'morning2':
                        videoSelector('morning3');
                        break;
                    case 'morning3':
                        videoSelector('morning4');
                        break;
                    case 'morning4':
                        videoSelector('morning5');
                        break;
                    case 'laugh1':
                        videoSelector('laugh2');
                        break;
                        case 'laugh2':
                        videoSelector('laugh3');
                        break;
                         case 'help1':
                        videoSelector('help2');
                        break;
                        case 'help2':
                        videoSelector('help3');
                        break;
                    case 'ask1':
                         videoSelector('ask2');
                        break;
                         case 'ask2':
                         videoSelector('ask3');
                        break;
                        
                        
                    
                    
                }
                
                
            },false);
            var replay =document.getElementById('replay');
            replay.addEventListener('click',function(e){
                document.getElementById(currentVideo).pause();
                document.getElementById(currentVideo).load();
                document.getElementById(currentVideo).play();
            },false)
            
           function videoSelector(targetVideo){
               document.getElementById(currentVideo).pause();
               if(!currentVideo=='morning1'){
                    document.getElementById(currentVideo).load();
               }
               document.getElementById(currentVideo).style.display='none';
               
               document.getElementById(targetVideo).style.display='block';
               document.getElementById(targetVideo).load();
               document.getElementById(targetVideo).play();
           }
               
            document.getElementById('sit2').onplay = function(){
                skip.style.display='block';
                document.getElementById('bus_selection_layer').style.display = 'none'; 
                currentVideo = 'sit2';
            }
            document.getElementById('sit3').onplay = function(){
                document.getElementById('bus_selection_layer').style.display = 'none'; 
                currentVideo = 'sit3'; 
            }
            document.getElementById('sit4').onplay = function(){
                document.getElementById('bus_selection_layer').style.display = 'none'; 
                document.getElementById('busReselect').style.display = 'block';
                currentVideo = 'sit4';
            }
            document.getElementById('busReselect').addEventListener('click',function(e){
                document.getElementById('busReselect').style.display = 'none';
                document.getElementById('bus_selection_layer').style.display = 'block'; 
                videoSelector('sit1');
                currentVideo = 'sit1'
            },false)
            
            document.getElementById('morning2').onplay = function(){
                currentVideo = 'morning2'; 
            }
             document.getElementById('morning3').onplay = function(){
                currentVideo = 'morning3'; 
            }
             document.getElementById('morning4').onplay = function(){
                currentVideo = 'morning4'; 
            }
             document.getElementById('morning5').onplay = function(){
                 document.getElementById('laugh').style.display = 'block';
                 document.getElementById('help').style.display = 'block';
                 document.getElementById('go').style.display = 'block';
                currentVideo = 'morning5'; 
            }
             document.getElementById('laugh').addEventListener('click',function(e){
                 videoSelector('laugh1');
                 currentVideo='laugh1';
                  document.getElementById('laugh').style.display = 'none';
                 document.getElementById('help').style.display = 'none';
                 document.getElementById('go').style.display = 'none';
             })
            document.getElementById('laugh2').onplay = function(){
                currentVideo = 'laugh2'; 
            }
             document.getElementById('laugh3').onplay = function(){
                 document.getElementById('laughReselect').style.display = 'block';
                 currentVideo = 'laugh3'; 
            }
             document.getElementById('help').addEventListener('click',function(e){
                 document.getElementById('laugh').style.display = 'none';
                 document.getElementById('help').style.display = 'none';
                 document.getElementById('go').style.display = 'none';
                 videoSelector('help1');
                 currentVideo='help1';
             })
            
            document.getElementById('help2').onplay = function(){
                currentVideo = 'help2'; 
            }
            document.getElementById('help3').onplay = function(){
                currentVideo = 'help3'; 
                document.getElementById('arguehim').style.display = 'block';
                 document.getElementById('askhelp').style.display = 'block';
            }
            document.getElementById('go').addEventListener('click',function(e){
                 videoSelector('goaway');
                 currentVideo='goaway';
             })
            document.getElementById('goaway').onplay = function(){
                document.getElementById('goReselect').style.display ='block';
            }
            document.getElementById('goReselect').addEventListener('click',function(e){
                 videoSelector('morning5');
                 currentVideo='morning5';
                document.getElementById('laugh').style.display = 'block';
                 document.getElementById('help').style.display = 'block';
                 document.getElementById('go').style.display = 'block';
                 document.getElementById('goReselect').style.display = 'none';
             })
            
             document.getElementById('laughReselect').addEventListener('click',function(e){
                 videoSelector('morning5');
                 currentVideo='morning5';
                document.getElementById('laugh').style.display = 'block';
                 document.getElementById('help').style.display = 'block';
                 document.getElementById('go').style.display = 'block';
                 document.getElementById('laughReselect').style.display = 'none';
             })
            
            document.getElementById('arguehim').addEventListener('click',function(e){
                videoSelector('argue');
                currentVideo='argue';
            })
            document.getElementById('argue').onplay = function(){
                document.getElementById('argueReselect').style.display ='block';
            }
             document.getElementById('argueReselect').addEventListener('click',function(e){
                 videoSelector('help3');
                 currentVideo='help3';
                document.getElementById('arguehim').style.display = 'block';
                 document.getElementById('askhelp').style.display = 'block';
                 document.getElementById('argueReselect').style.display = 'none';
             })
            document.getElementById('askhelp').addEventListener('click',function(e){
                videoSelector('ask1');
                currentVideo='ask1';
            })
            document.getElementById('ask1').onplay = function(){
                currentVideo='ask1';
            }
            document.getElementById('ask2').onplay = function(){
                currentVideo='ask2';
            }
            document.getElementById('ask3').onplay = function(){
                document.getElementById('goHome').style.display = 'block';
                currentVideo='ask3';
            }
            
             document.getElementById('goHome').addEventListener('click',function(e){
                    window.location.href = 'http://www.savetheyouth-iteration3.tk/games/';
            },false)
            
        </script>
    </body>
