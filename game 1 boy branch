                    <span><i id="off" class="fa fa-volume-up" aria-hidden="true" ></i></span>
                </button>
            
            <div id="button_layer">
          <button id="skip"><span><i class="fa fa-arrow-right" ></i></span>Next</button>
          <button id="replay"><span><i class="fa fa-undo" ></i></span> Replay</button>
           
            <div id="bus_selection_layer" style="display: none">
            <button id="sit" onclick="videoSelector('sit2')"></button>
            <button id="notsit" onclick="videoSelector('sit4')"></button>
             </div>
                
                <button id="busReselect" style="display: none">
                </button>
                
                <div id="first_selection_layer">
            <button id="laugh"></button>
            <button id="help"></button>
            <button id="go"></button>
                    <button id="laughReselect" style="display: none">
                </button>
                    <button id="goReselect" style="display: none">
                </button>
            <button id="arguehim" style="display: none"></button>
            <button id="askhelp" style="display: none"></button>
                     <button id="argueReselect" style="display: none">
                </button>
