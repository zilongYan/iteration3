    <script>
        var music = document.getElementById('audio1');
        music.volume = 0.2;
        var isPlaying = false;
        document.getElementById('go_home').addEventListener('click', function(e) {
            window.location.href = 'http://www.savetheyouth.tk/games/';
        }, false)
        music.volume = 0.2;
        document.getElementById('volume').addEventListener('click', function(e) {
            if (isPlaying) {
                music.pause();
                document.getElementById('off').setAttribute('class', "fa fa-volume-off");
            } else {
                music.play();
                document.getElementById('off').setAttribute('class', "fa fa-volume-up");
            }
        }, false)
        music.onplaying = function() {
            isPlaying = true;
        }
        music.onpause = function() {
            isPlaying = false;
        }
        
        var v1 = document.getElementById('1');
         var v2 = document.getElementById('2');
         var v3 = document.getElementById('3');
         var q1 = document.getElementById('q1');
         var q1button = document.getElementById('q1button');
         var q1abandon = document.getElementById('q1abandon');
         var q1respect = document.getElementById('q1respect');
         var q1a1 = document.getElementById('q1a1');
         var q1a2 = document.getElementById('q1a2');
         var q1res = document.getElementById('q1res');
         var q1reselectButton = document.getElementById('q1reselectButton');
         var q1select = document.getElementById('q1select');
         var choosetoy = document.getElementById('choosetoy');
         var bear = document.getElementById('bear');
         var dragon = document.getElementById('dragon');
         var choosetoyButton = document.getElementById('choosetoyButton');
         var selectbear = document.getElementById('selectbear');
        var selectbear = document.getElementById('selectdragon');
         var aftershopping = document.getElementById('aftershopping');
         var backtohome = document.getElementById('backtohome');
         var toyselect = document.getElementById('toyselect');
         var rob = document.getElementById('rob');
         var exchange = document.getElementById('exchange');
         var robtoy = document.getElementById('robtoy');
         var toyreselect = document.getElementById('toyreselect');
         var toyreselection = document.getElementById('toyreselection');
         var exchangetoy = document.getElementById('exchangetoy');
         var losegame = document.getElementById('losegame');
         var throwdesk = document.getElementById('throwdesk');
         var losegamereselection = document.getElementById('losegamereselection');
         var reselectlosegame = document.getElementById('reselectlosegame');
        v1.onended = function(){
            v1.style.display = 'none';
            v2.style.display = 'block';
            v2.play();
        }
        v2.onended = function(){
            v2.style.display = 'none';
            v3.style.display = 'block';
            v3.play();
        }
        v3.onended = function(){
            v3.style.display = 'none';
            q1button.style.display = 'block';
            q1.style.display = 'block';
            q1.play();
        }
        
       q1abandon.addEventListener("click", function(event) {
        q1select.pause();
        q1select.style.display = 'none';
        q1button.style.display = 'none';
        q1.style.display = 'none';
        q1a1.style.display = 'block';
        q1a1.play();
}, false);
        
        q1a1.onended = function(){
            q1a1.style.display = 'none';
            q1select.style.display = 'block';
            q1select.play();
            q1button.style.display = 'block';
        }
        
        q1res.addEventListener("click", function(event) {
            q1a1.style.display = 'none';
            q1reselectButton.style.display = 'none';
            q1select.style.display = 'block';
            q1select.play();
            q1button.style.display = 'block';
        }, false);
        
        q1respect.addEventListener("click",function(event){
            q1select.pause();
            q1select.style.display = 'none';
            q1button.style.display = 'none';
            q1.style.display = 'none';
            q1a2.style.display = 'block';
            q1a2.play();
        },false)
        
        q1a2.onended = function(){
            q1a2.style.display = 'none';
            choosetoy.style.display = 'block';
            choosetoy.play();
            choosetoyButton.style.display = 'block';
        }
        
        bear.addEventListener("click",function(event){
            choosetoy.pause();
            choosetoy.style.display = 'none'
            choosetoyButton.style.display = 'none';
            selectbear.style.display = 'block';
            selectbear.play(); 
        },false)
        dragon.addEventListener("click",function(event){
            choosetoy.pause();
            choosetoy.style.display = 'none'
            choosetoyButton.style.display = 'none';
            selectdragon.style.display = 'block';
            selectdragon.play(); 
        },false)
        
        
        selectbear.onended = function(){
            selectbear.pause();
            selectbear.style.display = 'none';
            aftershopping.style.display = 'block';
            aftershopping.play();
        }
        selectdragon.onended = function(){
            selectdragon.pause();
            selectdragon.style.display = 'none';
            aftershopping.style.display = 'block';
            aftershopping.play();
        }
        
        aftershopping.onended = function(){
            aftershopping.pause();
            aftershopping.style.display = 'none';
            backtohome.style.display = 'block';
            backtohome.play();
            toyselect.style.display = 'none';
        }
        
        backtohome.onended = function(){
            toyselect.style.display = 'block';
        }
        
        rob.addEventListener("click",function(event){
            toyreselect.style.display = 'none';
            toyselect.style.display = 'none';
            reselecttoy.style.display = 'none';
            backtohome.style.display = 'none';
            robtoy.style.display = 'block';
            robtoy.play();
        },false)
        
        robtoy.onended = function(){
            robtoy.style.display = 'none';
            toyreselect.style.display = 'block';
            toyreselect.play();
            toyselect.style.display = 'block';
        }
        
        reselecttoy.addEventListener('click',function(evet){
            toyreselection.style.display = 'none';
            toyselect.style.display = 'block';
            robtoy.style.display = 'none';
            toyreselect.style.display = 'block';
            toyreselect.play();
        },false)
        
        
        exchange.addEventListener("click",function(event){
            toyreselect.style.display = 'none';
            toyselect.style.display = 'none';
            backtohome.style.display = 'none';
            exchangetoy.style.display = 'block';
            exchangetoy.play();
        },false)
        
        exchangetoy.onended = function(){
            exchangetoy.style.display = 'none';
            losegame.style.display = 'block';
            losegame.play();
        }
        losegame.onended = function(){
            document.getElementById('losegameselection').style.display = 'block';
        }
        
        document.getElementById('throw').addEventListener("click",function(event){
            document.getElementById('losegamereselect').style.display = 'none';
            document.getElementById('losegameselection').style.display = 'none';
            losegame.style.display = 'none';
            document.getElementById('throwdesk').style.display = 'block';
            document.getElementById('throwdesk').play();
        },false)
        document.getElementById('throwdesk').onended = function(){
            document.getElementById('throwdesk').style.display = 'none';
            document.getElementById('losegamereselect').style.display = 'block';
             document.getElementById('losegameselection').style.display = 'block';
        }
        
        document.getElementById('continue').addEventListener("click",function(event){
            document.getElementById('losegameselection').style.display = 'none';
            document.getElementById('losegamereselect').style.display = 'none';
             losegame.style.display = 'none';
            document.getElementById('continueplay').style.display = 'block';
             document.getElementById('continueplay').play();
            
        },false)
        document.getElementById('continueplay').onended = function(){
            document.getElementById('playagain').style.display = 'block';
            document.getElementById('exit1').style.display = 'block';
        }
        document.getElementById('playagain').addEventListener('click',function(e){
                window.location.href = 'http://www.savetheyouth.tk/game-03/';
            },false)
            document.getElementById('exit1').addEventListener('click',function(e){
                window.location.href = 'http://www.savetheyouth.tk/games/';
            },false)
        
    </script>
</body>
